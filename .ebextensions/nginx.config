files:
  "/etc/nginx/conf.d/myapp.conf":
    mode: "644"
    owner: "root"
    group: "root"
    content: |
      server {
          listen 80;
          server_name _;

          location / {
              proxy_pass http://unix:/var/run/gunicorn.sock;
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header X-Forwarded-Proto $scheme;
          }

          location /static/ {
              alias /var/app/current/static/;
          }

          location /media/ {
              alias /var/app/current/media/;
          }
      }

  "/etc/nginx/nginx.conf":
    mode: "644"
    owner: "root"
    group: "root"
    content: |
      user nginx;
      worker_processes auto;
      error_log /var/log/nginx/error.log;
      pid /var/run/nginx.pid;

      events {
          worker_connections 1024;
      }

      http {
          include /etc/nginx/mime.types;
          default_type application/octet-stream;
          types_hash_max_size 2048;
          types_hash_bucket_size 128;
          sendfile on;
          tcp_nopush on;
          tcp_nodelay on;
          keepalive_timeout 65;
          server_tokens off;

          include /etc/nginx/conf.d/*.conf;
      }

commands:
  01_fix_permissions:
    command: |
      chown -R nginx:nginx /var/app/current/static/
      chown -R nginx:nginx /var/app/current/media/
      chmod -R 755 /var/app/current/static/
      chmod -R 755 /var/app/current/media/

container_commands:
  01_reload_nginx:
    command: "nginx -s reload"
