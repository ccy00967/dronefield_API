container_commands:
  01_migrate:
    command: "source /var/app/venv/staging-LATEST/bin/activate && python3 manage.py migrate"
    leader_only: true

  02_collectstatic:
    command: "source /var/app/venv/staging-LATEST/bin/activate && python3 manage.py collectstatic --noinput"
    leader_only: true

  03_permissions:
    command: "sudo chmod -R 755 /var/app/current/static /var/app/current/media"
